(G !(run1 && run2)) -> G (
    ([nx := 1] || [nx := 2])
    &&
    (run1 -> [nx := 1])
    &&
    (run2 -> [nx := 2])
    &&
    ([nx := 1] <-> [rt1 := rt1 + 1])
    &&
    ([nx := 2] <-> [rt2 := rt2 + 1])
    &&
    ((!run1 && !run2) -> (rt2 > rt1) -> [nx := 1])
    &&
    ((!run1 && !run2) -> (rt1 > rt2) -> [nx := 2])
    &&
    ((G (!run1 && !run2))-> ((G F [nx := 1]) && (G F [nx := 2])))
)
