//-- State: x, y
//-- Inputs: env_x_move

//#LIA#

assume {
  eq x i1();
  eq y i0();
}

always assume {
  eq env_x_move i1() || eq env_x_move im1() || eq env_x_move i0();
}

always guarantee {
  le (sub i0() x) i8(); /* INV */
  le x i7(); /* INV */
  le (sub i0() y) i8(); /* INV */
  le y i7(); /* INV */

  ge y (sub x i2()); /* INV */
  le y (add x i2()); /* INV */

  [x <- (add x env_x_move)];
  ([y <- y] || [y <- add y i1()] || [y <- sub y i1()]);
}
