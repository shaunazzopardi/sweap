//-- State: x, y
//-- Inputs: env_x_move

//#LIA#

assume {
  eq x i1();
  eq y i0();
}

always assume {
  eq env_x_move i1() || eq env_x_move im1() || eq env_x_move i0();
}

always guarantee {
  ge x i0(); /* INV */
  le x i1(); /* INV */
  ge y i0(); /* INV */
  le y i1(); /* INV */

  ge y (sub x i2()); /* INV */
  le y (add x i2()); /* INV */

  [x <- (add x env_x_move)];
  ([y <- y] || [y <- add y i1()] || [y <- sub y i1()]);
}
