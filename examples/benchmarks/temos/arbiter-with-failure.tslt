#LIA
//-- State: floor, target
//-- Inputs: signal

assume {
  eq i0() q;
}

always assume {
    (eq success i0()) || (eq success i1())
}

always guarantee {
  (eq q i0()) -> ([cnt <- env_cnt] && [q <- i1()]);
  [cnt <- sub cnt i1()] -> ((eq q i1()) && (eq success i1()) && [q <- q]);
  ([cnt <- sub cnt i1()] || [cnt <- cnt] || [q <- q] || [q <- i0()] || [q <- i1()]);
  (G F (eq success i1())) -> G (((eq q i1()) && [q <- i0()]) -> (eq cnt i0())));
}
