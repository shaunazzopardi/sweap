//-- Inputs: i_i
guarantee {
[loc  <- i0()];
G ((eq loc i0()) -> ([x <- x] && [loc <- i1()]));
G ((eq loc i1()) -> (([x <- x] && [loc <- i1()]) || [x <- (sub x i1())] && [loc <- i2()]));
