program eventually__allow_grant {
    STATES {
        q0 : init, q1, q2
    }

    ENVIRONMENT EVENTS {
        request, dealWithTasks, otherRoom
    }

    CONTROLLER EVENTS {
        done1
    }

    VALUATION {
        cnt : natural := 0;
        room1 : bool := true;
        granting : bool := false;
    }

    TRANSITIONS {
        q0 -> q0 [request $ cnt := cnt + 1],
        q0 -> q1 [!request & (cnt > 0)],
        q0 -> q2 [!request & (cnt == 0)],
        q2 -> q0 [ $],
        q1 -> q1 [done1 && (cnt > 0) $ cnt := cnt - 1;],
        q1 -> q1 [!done1 && (cnt > 0) $ cnt := cnt + 1],
        q1 -> q2 [!(done1) & cnt == 0]
    }

    SPECIFICATION {
        (G F (!request)) ->
          (G(q1 -> F cnt == 0))
  }
}
