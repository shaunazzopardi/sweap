program infinite-race {
    STATES {
        q : init, q1
    }

    ENVIRONMENT EVENTS {
        set_e: integer;
        set_c: integer
    }

    CONTROLLER EVENTS {
        incc
    }

    VALUATION {
        e : natural := 0;
        c : natural := 0;
    }

    TRANSITIONS {
        q -> q1 [ $ e := set_e; c:= set_c],
        q1 -> q1 [incc $ c := c + 1],
        q1 -> q [!incc]
    }

    SPECIFICATION {
        (G F q1) -> ((! G F (incc)) & G F (q && c > e))
    }
}